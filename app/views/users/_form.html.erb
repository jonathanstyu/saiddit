<form action="<%= method == 'post' ? users_path : user_path(@user) %>" method="post">
	<input type="hidden" name="_method" value="<%= method %>" id="_method">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<label for="User Name">User Name</label><br>
	<input type="text" name="user[username]" value="<%= @user.username %>" id="User Name"><br>
	
	<label for="Password">Password</label><br>
	<input type="password" name="user[password]" value="" id="Password"><br>
	
	<input type="submit" name="submit" value="Submit Information" id="submit">
	
</form>
